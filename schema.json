{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "package-description.json",
    "type": "object",
    "title": "package-description.json file",
    "description": "Description for usage of packages from package.json",
    "properties": {
        "$schema": {
            "type": "string",
            "const": "./node_modules/package-description/schema.json"
        },
        "dependencies": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/description"
            }
        },
        "devDependencies": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/description"
            }
        }
    },
    "required": [
        "dependencies",
        "devDependencies"
    ],
    "additionalProperties": false,
    "$defs": {
        "description": {
            "type": "object",
            "title": "A description of package",
            "description": "A description of package from package.jsosn",
            "oneOf": [
                {
                    "properties": {
                        "status": {
                            "type": "string",
                            "const": "actual",
                            "title": "Actual package",
                            "description": "Recommended to use"
                        },
                        "description": {
                            "$ref": "#/$defs/packageDescription"
                        }
                    },
                    "required": [
                        "status",
                        "description"
                    ],
                    "additionalProperties": false
                },
                {
                    "properties": {
                        "status": {
                            "type": "string",
                            "const": "outdated",
                            "title": "Outdate package",
                            "description": "Should be updated to actual version"
                        },
                        "description": {
                            "$ref": "#/$defs/packageDescription"
                        },
                        "issueLink": {
                            "type": "string",
                            "title": "Link to issue",
                            "description": "Link to the issue where the package will be updated"
                        }
                    },
                    "required": [
                        "status",
                        "description",
                        "issueLink"
                    ],
                    "additionalProperties": false
                },
                {
                    "properties": {
                        "status": {
                            "type": "string",
                            "const": "deprecated",
                            "title": "Deprecated package",
                            "description": "Should be removed"
                        },
                        "description": {
                            "$ref": "#/$defs/packageDescription"
                        },
                        "issueLink": {
                            "type": "string",
                            "title": "Link to issue",
                            "description": "Link to the issue where the package will be removed"
                        },
                        "replacement": {
                            "type": "string",
                            "description": "Package that should be used instead of deprecated"
                        }
                    },
                    "required": [
                        "status",
                        "description",
                        "issueLink"
                    ],
                    "additionalProperties": false
                },
                {
                    "properties": {
                        "status": {
                            "type": "string",
                            "const": "unknown",
                            "title": "Unknown package",
                            "description": "Not described yet"
                        },
                        "description": {
                            "$ref": "#/$defs/packageDescription"
                        }
                    },
                    "required": [
                        "status",
                        "description"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        "packageDescription": {
            "type": "string",
            "title": "Description of package purpose",
            "description": "For what purpose the package is used"
        }
    }
}